                <li class="main-nav-item"><a href="#" class="main-nav-link" data-target="learning">Learning</a></li>
                <!-- Game navigation link opens the Game SELECTION overlay -->
                <li class="main-nav-item"><a href="#" class="main-nav-link" data-target="games">Games</a></li>
            </ul>
            <div class="hamburger-menu">
                <div class="hamburger-icon bar1"></div>
                <div class="hamburger-icon bar2"></div>
                <div class="hamburger-icon bar3"></div>
            </div>
        </div>
    </nav>

    <script>
        const hamburgerMenu = document.querySelector('.hamburger-menu');
        const mainNavList = document.querySelector('.main-nav-list');
        const navLinks = document.querySelectorAll('.main-nav-link');
        const pageOverlays = document.querySelectorAll('.page-overlay');
        const closeButtons = document.querySelectorAll('.close-button');
        const gameFrame = document.getElementById('game-frame'); // Get the iframe element

        // --- Hamburger Menu Toggle ---
        hamburgerMenu.addEventListener('click', () => {
            hamburgerMenu.classList.toggle('active');
            mainNavList.classList.toggle('active');
        });

        // --- Navigation Link Click Handler ---
        navLinks.forEach(link => {
            link.addEventListener('click', (event) => {
                event.preventDefault();
                const targetId = link.getAttribute('data-target');

                if (targetId === 'games') {
                    // If it's the "Games" link, open the game selection overlay
                    openGameSelectionOverlay();
                } else {
                    // For other links, open their respective overlays
                    const targetOverlayId = targetId + '-overlay';
                    openAppOverlay(targetOverlayId);
                }

                // Close hamburger menu if open
                if (hamburgerMenu.classList.contains('active')) {
                    hamburgerMenu.classList.remove('active');
                    mainNavList.classList.remove('active');
                }
            });
        });

        // --- Game Selection Tile Click Handler ---
        document.addEventListener('click', function(e) {
            // Check if the clicked element is an app-tile and it's within the game selection overlay
            if (e.target && e.target.classList.contains('app-tile') && e.target.closest('#games-selection-overlay')) {
                e.preventDefault(); // Prevent default anchor behavior

                const gameSrc = e.target.getAttribute('data-game-src');
                if (gameSrc) {
                    // Open the main game overlay and load the selected game
                    openGamePlayOverlay(gameSrc);
                }
            }
        });

        // --- Close Button Click ---
        closeButtons.forEach(button => {
            button.addEventListener('click', () => {
                closeOverlay();
            });
        });

        // --- Function to Open App Overlays (like Google, News, etc.) ---
        function openAppOverlay(overlayId) {
            const overlay = document.getElementById(overlayId);
            if (overlay) {
                pageOverlays.forEach(page => page.classList.remove('visible'));
                overlay.classList.add('visible');
                document.body.style.overflow = 'hidden'; // Prevent scrolling behind overlay
            }
        }

        // --- Function to Open the Game SELECTION Overlay ---
        function openGameSelectionOverlay() {
            const selectionOverlay = document.getElementById('games-selection-overlay');
            if (selectionOverlay) {
                pageOverlays.forEach(page => page.classList.remove('visible'));
                selectionOverlay.classList.add('visible');
                document.body.style.overflow = 'hidden'; // Prevent scrolling behind overlay
            }
        }

        // --- Function to Open the MAIN GAME PLAYING Overlay ---
        function openGamePlayOverlay(gameSrc) {
            const playOverlay = document.getElementById('game-overlay');
            if (playOverlay) {
                pageOverlays.forEach(page => page.classList.remove('visible'));
                gameFrame.src = gameSrc; // This is where RetroBowl.html (or other game) gets loaded
                playOverlay.classList.add('visible');
                document.body.style.overflow = 'hidden'; // Prevent scrolling behind overlay
            }
        }

        // --- Function to Close ALL Overlays ---
        function closeOverlay() {
            pageOverlays.forEach(page => page.classList.remove('visible'));
            document.body.style.overflow = ''; // Restore scrolling

            // When closing the game overlay, clear the iframe source
            if (gameFrame.src) {
                gameFrame.src = '';
            }
        }

        // --- Close Overlay if clicking outside the content ---
        pageOverlays.forEach(overlay => {
            overlay.addEventListener('click', (event) => {
                // Close if clicking on the overlay background itself, UNLESS it's the game-playing overlay
                if (event.target === overlay && !overlay.id.includes('game-overlay')) {
                    closeOverlay();
                }
            });
        });

        // --- Optional: Close overlay with Escape key ---
        document.addEventListener('keydown', (event) => {
            if (event.key === 'Escape') {
                closeOverlay();
            }
        });
    </script>
</body>
</html>
